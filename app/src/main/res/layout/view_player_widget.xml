<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark"
    android:orientation="horizontal"
    android:padding="@dimen/ui_elements_padding"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/view_player_widget_equalizer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_equalizer_animated" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/view_player_widget_album_art"
            android:layout_width="@dimen/list_rounded_image_width_height"
            android:layout_height="@dimen/list_rounded_image_width_height"
            android:layout_marginRight="@dimen/ui_elements_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_player_widget_artist"
                style="@style/Text.ArtistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="The Beatles" />

            <TextView
                android:id="@+id/view_player_widget_song"
                style="@style/Text.SongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="What is love" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>