<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="DefaultFragment" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text" parent="AppTheme">
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="Text.ArtistTitle" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.SongTitle" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.SongDuration" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.TutorialText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
