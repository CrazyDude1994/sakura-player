<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="ViewpagerIndicatorTabs" parent="Theme.PageIndicatorDefaults">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DefaultFragment" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text" parent="AppTheme">
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.ArtistTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.SongTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.DialogTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.SongDuration">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.TutorialText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="Button.Flat.White" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Flat.Black" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>